{
  "name": "platforms-sdk",
  "version": "0.1.0",
  "description": "A layered SDK for building platforms on Cloudflare Workers with Dynamic Workers",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./storage": {
      "types": "./dist/storage/index.d.ts",
      "import": "./dist/storage/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "workers-builder": "^0.1.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "license": "MIT"
}
