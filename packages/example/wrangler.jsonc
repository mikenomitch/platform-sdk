{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "platforms-sdk-playground",
  "main": "src/index.ts",
  "compatibility_date": "2026-01-01",
  "assets": {
    "directory": "./public",
    "binding": "ASSETS"
  },
  // Dynamic Worker Loader
  "worker_loaders": [
    {
      "binding": "LOADER"
    }
  ],
  // KV for storage
  "kv_namespaces": [
    {
      "binding": "TENANTS",
      "id": "9721c80bd8b54ac19c3fb77d68b785f4"
    },
    {
      "binding": "WORKERS", 
      "id": "1f196ca61e62413aab2fec1e37bc427f"
    }
  ],
  "observability": {
    "enabled": true
  }
}
